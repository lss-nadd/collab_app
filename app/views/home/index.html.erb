        <%= image_tag('EBay_logo.png', class: "col-lg-6 order-lg-2 text-white showcase-img", style: "background-color:black") %>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text", style="background-color:black; color:white">
          <h2>Ebay</h2>
          <p class="lead mb-0">An online marketplace; a place for buyers and sellers to come together and buy or sell almost anything.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonials text-center bg-light">
    <div class="container">
      <h2 class="mb-5">Who's fault this site is.</h2>
      <div class="row">
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <%= image_tag('Leo_S.jpg', class: "img-fluid rounded-circle mb-3")%>
            <h5>Leo S.</h5>
            <p class="font-weight-light mb-0">"I do good?"</p>
          </div>
        </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <%= image_tag('Nick_D.jpg', class: "img-fluid rounded-circle mb-3")%>
            <h5>Nick D.</h5>
            <p class="font-weight-light mb-0">"Sorry."</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="call-to-action text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-4">Ready to get started? Sign up now!</h2>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form>
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="email" class="form-control form-control-lg" placeholder="Enter your email...">
              </div>
              <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-primary">Sign up!</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
          <ul class="list-inline mb-2">
