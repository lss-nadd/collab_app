  </nav>

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">What kind of dice are you looking for?</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
