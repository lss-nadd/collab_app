  </header>

  <!-- Icons Grid -->
  <section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="fab fa-d-and-d m-auto text-danger"></i>
            </div>
            <h3>Dungeons and Dragons</h3>
            <p class="lead mb-0">Search for dice made for questing!</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="fas fa-dice m-auto text-primary"></i>
            </div>
            <h3>Upgrade</h3>
            <p class="lead mb-0">Replace old boardgame dice with quality!</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="fas fa-thumbs-up m-auto text-sucess"></i>
            </div>
            <h3>You</h3>
            <p class="lead mb-0">Find the dice that are perfect for you!</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  <h2 style="text-align:center;">Where we search:</h2>
  <!-- Image Showcases -->
  <section class="showcase">
    <div class="container-fluid p-0">
      <div class="row no-gutters">
        <%= image_tag('kraken.jpg', class: "col-lg-6 order-lg-2 text-white showcase-img") %>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text", style="background-color:black; color:white">
          <h2>Kraken Dice</h2>
          <p class="lead mb-0">High quality dice and a love for the fans that need them, because everyone deserves to roll in style.</p>
        </div>
      </div>
      <div class="row no-gutters">
        <%= image_tag('amazon-logo2.png', class: "col-lg-6 text-white showcase-img") %>
        <div class="col-lg-6 my-auto showcase-text">
          <h2>Amazon</h2>
          <p class="lead mb-0", style="color:darkgoldenrod;">The worldâ€™s largest online retailer.</p>
